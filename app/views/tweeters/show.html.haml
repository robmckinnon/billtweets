%h1
  = @tweeter.full_name
  = link_to "@#{@tweeter.name}", "http://twitter/#{@tweeter.name}"
%p
  =h @tweeter.bio
  %strong Password:
  =h @tweeter.password
  %strong Email:
  =h @tweeter.email
%div
  = button_to 'Make tweets', :controller => 'tweeters', :action => 'make_tweets'
%div
  = button_to 'Do search', :controller => 'tweeters', :action => 'do_search'

%ul
  - false && @tweeter.entry_sources.each do |source|
    %li
      = source.item_title_name.blank? ? '' : source.item_title_name
      = ' - '
      = source.item_host_uri
%table
  %tr
    %th Published Date
    %th Domain
    %th Sub domain
    %th Type
    %th Publisher
    %th Tweet
    %th Content
  - @tweeter.tweets.select(&:is_whitelisted?).sort_by(&:published_time).each do |tweet|
    %tr
      %td= h tweet.entry_item.published_date.to_date.to_s(:dd_mm_yyyy)
      - if tweet.entry_item.sub_domain
        %td{:style => 'text-align:center'}= h tweet.entry_item.host_domain
        %td= h tweet.entry_item.sub_domain
      - else
        %td{:style => 'text-align:center'}= h tweet.entry_item.host_domain
        %td
      %td= h tweet.entry_item.class.name.sub('Item','')
      %td= h tweet.entry_item.publisher
      %td
        = h(tweet.display_message) + " (#{tweet.display_message.size})"
        %br
        = tweet.entry_item.twfy_uri ? link_to(tweet.entry_item.twfy_uri, tweet.entry_item.twfy_uri) : ''
      %td
        = h tweet.entry_item.published_date
        %br
        = h tweet.entry_item.title
        %br
        = h tweet.entry_item.content
= link_to 'Edit', edit_object_url
|
= link_to 'Back', collection_url